<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/wait_progress_padding"
    android:background="@drawable/bg_wait_progress_transparent"
    android:orientation="horizontal">

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="@dimen/wait_progress_width"
        android:layout_height="@dimen/wait_progress_height"/>

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/wait_progress_padding"
        android:text="Connecting..."
        android:textSize="30sp"
        android:textColor="@color/white"/>

</LinearLayout>